<SearchHeader.render q={@q} />
<HeroInfo.render :if={length(@search_results) == 0} />
<ItemDetails.render
  :if={@live_action == :details}
  product={@product}
  cart={@cart}
  vendor={
    Enum.find(
      @vendors,
      fn v ->
        v.id ==
          @product.vendor
      end
    )
  }
/>

<div class="w-full mt-[35px] xxl:mt-[60px] px-4 lg:px-[35px] pb-10">
  <div class="grid grid-cols-1 gap-x-3 gap-y-3 mt-9 md:grid-cols-2 md:gap-x-4 md:gap-y-4 lg:grid-cols-3 xl:grid-cols-3 xl:gap-x-4 xl:gap-y-4 xxl:grid-cols-4 large:grid-cols-4">
    <%= if length(@search_results) > 0 do %>
      <%= for item <- @search_results do %>
        <ItemCard.main
          item={item}
          cart={@cart}
          vendor={
            Enum.find(
              @vendors,
              fn v ->
                v.id ==
                  item.vendor
              end
            )
          }
        />
      <% end %>
    <% else %>
      <%= for item <- @items do %>
        <ItemCard.main
          item={item}
          cart={@cart}
          vendor={
            Enum.find(
              @vendors,
              fn v ->
                v.id ==
                  item.vendor
              end
            )
          }
        />
      <% end %>
    <% end %>
  </div>
</div>
